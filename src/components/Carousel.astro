---
import { register } from 'swiper/element/bundle';
import swiperStyles from 'swiper/swiper-bundle.css?inline';

register();
---
<style>
  {swiperStyles}
</style>

<swiper-container
  slides-per-view="1"
  autoplay="true"
  loop="true"
>
  <swiper-slide>Item 1</swiper-slide>
  <swiper-slide>Item 2</swiper-slide>
  <swiper-slide>Item 3</swiper-slide>
</swiper-container>